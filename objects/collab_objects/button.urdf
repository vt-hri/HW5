<?xml version="1.0"?>
<robot name="button">

  <link name="base">
    <visual>
      <geometry>
        <cylinder length="0.03" radius="0.025"/>
      </geometry>
      <material name="white"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.03" radius="0.025"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1"/>
      <inertia ixx="1" ixy="0.0" ixz="0.0" iyy="1" iyz="0.0" izz="1"/>
    </inertial>
  </link>

  <link name="button">
    <visual>
      <geometry>
        <cylinder length="0.03" radius="0.02"/>
      </geometry>
      <material name="red"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.03" radius="0.02"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  <link name="dummy"></link> 

  <joint name="slider" type="prismatic">
    <axis xyz="0 0 1"/>
    <limit effort="1000.0" lower="-0.015" upper="0.0" velocity="40"/>
    <parent link="base"/>
    <child link="button"/>
    <dynamics damping="0.01" friction="0.01"/>
    <origin xyz="0 0 0.02"/>
  </joint>

  <joint name="handle" type="fixed">  
      <parent link="button"/>  
       <child link="dummy"/>  
  </joint>

  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>

  <material name="red">
    <color rgba="1 0 0 1"/>
  </material>

</robot>